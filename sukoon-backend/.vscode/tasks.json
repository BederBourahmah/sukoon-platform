{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/SukoonBackend/SukoonBackend.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary;ForceNoAlign"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "docker-compose-up",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "command": "docker compose up --build -d --wait",
      "windows": {
        "command": "docker compose up --build -d --wait"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "docker-compose-down",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "command": "docker compose down -v",
      "problemMatcher": []
    }
  ]
} 